    "eslint-config-akig": "workspace:*",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.14.2",
  "pnpm": {
    "overrides": {
      "express": "^5.0.1",
      "axios": "^1.7.9"
