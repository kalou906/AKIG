apps/web/.next/
apps/web/out/
apps/web/.turbo/

# NestJS
apps/api/dist/
apps/api/.turbo/

# Shared packages
packages/**/dist/
packages/**/.turbo/

# ============================================
# Testing
# ============================================
coverage/
*.lcov
.nyc_output/

# Playwright
apps/web/test-results/
apps/web/playwright-report/
apps/web/playwright/.cache/

# ============================================
# Logs
# ============================================
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*
pnpm-debug.log*

# ============================================
# IDEs & Editors
