# ============================================================================
# AKIG Backend - Configuration d'environnement
# ============================================================================
# Copier ce fichier en .env et remplir les valeurs réelles

# ============================================================================
# Application
# ============================================================================
NODE_ENV=development
PORT=4000
DEBUG=false
FEATURE_FLAGS=payments,sms,dashboard

# ============================================================================
# Base de données PostgreSQL
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/akig_db
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# ============================================================================
# Authentification et JWT
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRY=7d

# ============================================================================
# Stockage de fichiers (S3 ou local)
# ============================================================================
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 (si applicable)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=akig-bucket

# ============================================================================
# Email (SMTP)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@akig.app

# ============================================================================
# API Keys externes
# ============================================================================
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLIC_KEY=pk_live_...

# ============================================================================
# Monitoring et logging
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================================================
# Rate limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Session
# ============================================================================
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# ============================================================================
# Timezone
# ============================================================================
TIMEZONE=Africa/Conakry
LOCALE=fr-GN
