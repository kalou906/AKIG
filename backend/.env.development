# ================================================
# AKIG BACKEND - ENVIRONMENT CONFIGURATION (ACTIVE)
# ================================================
# DO NOT commit this file to version control!
# Use .env.example as template

# ============ APPLICATION ============
NODE_ENV=development
APP_ENV=development
PORT=4000
API_VERSION=1.0.0

# ============ DATABASE ============
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/akig_immobilier
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# ============ AUTHENTICATION ============
JWT_SECRET=dev_akig_jwt_secret_key_please_rotate_for_prod_32_chars_min
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=akig_refresh_secret_development_change_in_production
JWT_REFRESH_EXPIRY=7d

# ============ SECURITY ============
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# ============ REDIS (OPTIONAL) ============
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# ============ LOGGING ============
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# ============ FEATURES ============
FEATURE_FLAGS=payments,sms,dashboard
FEATURE_CSV_IMPORT=true
FEATURE_PDF_EXPORT=true
FEATURE_AUDIT_LOGGING=true

# ============ TIMEZONE ============
TZ=Africa/Conakry
