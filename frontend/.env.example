# ================================================
# AKIG FRONTEND - ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env and fill in your values
# React loads only variables prefixed with REACT_APP_

# ============ API ============
REACT_APP_API_URL=http://localhost:4000
REACT_APP_FEATURE_FLAGS=payments,sms,dashboard
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# ============ APPLICATION ============
REACT_APP_ENV=development
# Valid values: development | staging | production
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=AKIG

# ============ AUTHENTICATION ============
REACT_APP_JWT_STORAGE_KEY=akig_jwt_token
REACT_APP_USER_STORAGE_KEY=akig_user_data
REACT_APP_THEME_STORAGE_KEY=akig_theme

# ============ FEATURES ============
REACT_APP_FEATURE_CSV_IMPORT=true
REACT_APP_FEATURE_PDF_EXPORT=true
REACT_APP_FEATURE_AUDIT_LOG=true
REACT_APP_FEATURE_DARK_MODE=true

# ============ UI/UX ============
REACT_APP_THEME_DEFAULT=light
# Valid values: light | dark
REACT_APP_SHOW_PERFORMANCE_METRICS=false
REACT_APP_ENABLE_NETWORK_LOGGER=false

# ============ LOGGING ============
REACT_APP_LOG_LEVEL=info
# Valid values: error | warn | info | debug
REACT_APP_LOG_TO_CONSOLE=true

# ============ SENTRY ERROR TRACKING (OPTIONAL) ============
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_ENABLED=false

# ============ ANALYTICS (OPTIONAL) ============
REACT_APP_ANALYTICS_ENABLED=false
REACT_APP_GA_TRACKING_ID=

# ============ BRANDING ============
REACT_APP_COMPANY_NAME=AKIG Guinea
REACT_APP_COMPANY_LOGO=/logo-guinean.svg
REACT_APP_PRIMARY_COLOR=#004E89
REACT_APP_SECONDARY_COLOR=#CE1126
