/** Global CSS for AKIG Application - DEPRECATED */
/** Use src/index.css instead */

/* ========== CSS Variables ========== */
:root {
  /* Colors */
  --color-primary: #0F2557;
  --color-secondary: #1e40af;
  --color-accent: #F59E0B;
  --color-success: #0EA5E9;
  --color-warning: #F59E0B;
  --color-error: #DC2626;
  --color-info: #3B82F6;
  
  /* Backgrounds */
  --color-bg: #F5F7FB;
  --color-bg-light: #FFFFFF;
  --color-bg-hover: #F3F4F6;
  
  /* Text */
  --color-text: #0A0A0A;
  --color-text-muted: #4B5563;
  --color-text-light: #6B7280;
  
  /* Borders */
  --color-border: #E5E7EB;
  --color-border-light: #F3F4F6;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
  --shadow-premium: 0 10px 30px rgba(15, 37, 87, 0.15);
  
  /* Spacing */
  --spacing-unit: 1rem;
  
  /* Border Radius */
  --radius-sm: 4px;
  --radius-md: 8px;
  --radius-lg: 12px;
  --radius-xl: 16px;
  
  /* Transitions */
  --transition-fast: 150ms ease-in-out;
  --transition-base: 200ms ease-in-out;
  --transition-slow: 300ms ease-in-out;
}

/* ========== Base Styles ========== */
html {
  scroll-behavior: smooth;
}

body {
  @apply bg-akig-bg text-akig-text font-sans;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ========== Typography ========== */
h1, h2, h3, h4, h5, h6 {
  @apply font-heading font-bold text-akig-text;
}

h1 {
  @apply text-3xl md:text-4xl leading-tight;
}

h2 {
  @apply text-2xl md:text-3xl leading-snug;
}

h3 {
  @apply text-xl md:text-2xl leading-snug;
}

h4 {
  @apply text-lg md:text-xl leading-snug;
}

h5, h6 {
  @apply text-base md:text-lg;
}

p {
  @apply leading-relaxed text-akig-text;
}

a {
  @apply text-akig-blue hover:underline transition-colors duration-200;
}

/* ========== Components ========== */

/* Buttons */
.btn {
  @apply px-4 py-2 rounded-lg font-semibold transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 inline-flex items-center justify-center gap-2;
}

.btn-primary {
  @apply bg-akig-blue text-white hover:bg-opacity-90 focus:ring-akig-blue;
}

.btn-secondary {
  @apply bg-akig-bg border border-akig-blue text-akig-blue hover:bg-akig-hover focus:ring-akig-blue;
}

.btn-danger {
  @apply bg-akig-error text-white hover:bg-opacity-90 focus:ring-akig-error;
}

.btn-warning {
  @apply bg-akig-warn text-white hover:bg-opacity-90 focus:ring-akig-warn;
}

.btn-success {
  @apply bg-akig-success text-white hover:bg-opacity-90 focus:ring-akig-success;
}

.btn-sm {
  @apply px-3 py-1 text-sm;
}

.btn-lg {
  @apply px-6 py-3 text-lg;
}

.btn:disabled {
  @apply opacity-50 cursor-not-allowed hover:bg-current;
}

/* Forms */
.form-input,
.form-select,
.form-textarea {
  @apply w-full px-3 py-2 border border-akig-border rounded-lg focus:outline-none focus:ring-2 focus:ring-akig-blue focus:border-transparent transition-all duration-200;
}

.form-input::placeholder,
.form-textarea::placeholder {
  @apply text-akig-muted;
}

.form-label {
  @apply block text-sm font-semibold text-akig-text mb-2;
}

.form-error {
  @apply text-akig-error text-sm mt-1;
}

.form-hint {
  @apply text-akig-muted text-xs mt-1;
}

/* Cards */
.card {
  @apply bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow duration-300 border border-akig-border;
}

.card-compact {
  @apply bg-white rounded-lg p-4 shadow-sm border border-akig-border;
}

.card-header {
  @apply pb-4 border-b border-akig-border mb-4;
}

.card-title {
  @apply text-lg font-semibold text-akig-text;
}

.card-body {
  @apply space-y-4;
}

.card-footer {
  @apply pt-4 border-t border-akig-border mt-4;
}

/* Badges */
.badge {
  @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold;
}

.badge-primary {
  @apply bg-blue-100 text-akig-blue;
}

.badge-success {
  @apply bg-green-100 text-green-800;
}

.badge-warning {
  @apply bg-yellow-100 text-yellow-800;
}

.badge-error {
  @apply bg-red-100 text-akig-error;
}

.badge-info {
  @apply bg-blue-100 text-blue-800;
}

/* Alerts */
.alert {
  @apply px-4 py-3 rounded-lg border flex items-start gap-3;
}

.alert-primary {
  @apply bg-blue-50 border-blue-200 text-blue-800;
}

.alert-success {
  @apply bg-green-50 border-green-200 text-green-800;
}

.alert-warning {
  @apply bg-yellow-50 border-yellow-200 text-yellow-800;
}

.alert-error {
  @apply bg-red-50 border-red-200 text-red-800;
}

.alert-info {
  @apply bg-blue-50 border-blue-200 text-blue-800;
}

/* Tables */
.table-wrapper {
  @apply overflow-x-auto;
}

table {
  @apply w-full text-sm;
}

thead {
  @apply bg-akig-bg border-b-2 border-akig-border;
}

th {
  @apply px-4 py-3 text-left font-semibold text-akig-text;
}

td {
  @apply px-4 py-3 border-b border-akig-border text-akig-text;
}

tbody tr:hover {
  @apply bg-akig-hover;
}

/* Modals & Overlays */
.modal-backdrop {
  @apply fixed inset-0 bg-black bg-opacity-50 transition-opacity duration-300;
}

.modal-content {
  @apply bg-white rounded-2xl shadow-2xl max-w-lg w-full mx-auto;
}

.modal-header {
  @apply px-6 py-4 border-b border-akig-border flex items-center justify-between;
}

.modal-body {
  @apply px-6 py-4 max-h-96 overflow-y-auto;
}

.modal-footer {
  @apply px-6 py-4 border-t border-akig-border flex justify-end gap-3;
}

/* Navigation */
.nav-link {
  @apply px-4 py-2 rounded-lg transition-colors duration-200 hover:bg-akig-hover;
}

.nav-link.active {
  @apply bg-akig-blue text-white;
}

/* Utilities */
.truncate-lines-1 {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.truncate-lines-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.truncate-lines-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* ========== Responsive Utilities ========== */
@media (max-width: 768px) {
  .container-adaptive {
    @apply px-4;
  }

  h1 {
    @apply text-2xl;
  }

  h2 {
    @apply text-xl;
  }

  h3 {
    @apply text-lg;
  }
}

/* ========== Animations ========== */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.animate-fadeIn {
  animation: fadeIn 0.3s ease-in-out;
}

.animate-slideInUp {
  animation: slideInUp 0.3s ease-in-out;
}

.animate-slideInDown {
  animation: slideInDown 0.3s ease-in-out;
}

.animate-pulse-custom {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* ========== Print Styles ========== */
@media print {
  .no-print {
    display: none !important;
  }

  body {
    @apply bg-white;
  }

  .card {
    @apply shadow-none border-0;
  }
}
