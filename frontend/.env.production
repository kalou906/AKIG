# React Performance
REACT_APP_MODE=production
REACT_APP_LOG_LEVEL=error
GENERATE_SOURCEMAP=false
NODE_ENV=production
REACT_APP_APP_ENV=production
REACT_APP_ROLE=admin

# API Configuration - Optimized
REACT_APP_API_URL=http://localhost:4000/api
REACT_APP_API_BASE_URL=http://localhost:4000/api
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY=3
REACT_APP_FEATURE_FLAGS=payments,sms,dashboard

# Caching Strategy
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_TTL=300000
REACT_APP_CACHE_MAX_SIZE=50

# Performance Monitoring
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_SENTRY_ENVIRONMENT=production
REACT_APP_SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
REACT_APP_ENABLE_LAZY_LOAD=true
REACT_APP_ENABLE_CODE_SPLITTING=true
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_COMPRESSION=true

# Security
REACT_APP_SECURE_COOKIES=true
REACT_APP_SECURE_HEADERS=true
REACT_APP_CSRF_PROTECTION=true

# Browser Caching
REACT_APP_BROWSER_CACHE_MAX_AGE=604800
REACT_APP_STATIC_CACHE_BUSTING=true
